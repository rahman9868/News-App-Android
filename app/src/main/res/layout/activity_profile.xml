<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_blue_pink"
    tools:context=".view.ProfileActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <ImageView
            android:id="@+id/btnExit"
            android:layout_gravity="end"
            android:layout_margin="@dimen/layout_between_padding"
            android:src="@drawable/ic_logout"
            android:layout_width="30dp"
            android:layout_height="30dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_padding"
            android:gravity="center"
            android:orientation="vertical">



            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:cardCornerRadius="38dp"
                android:layout_margin="2dp"
                android:elevation="0dp">

                <ImageView
                    android:id="@+id/image_profile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"/>


            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/text_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:layout_marginRight="@dimen/vertical_margin_padding"
                android:layout_marginLeft="@dimen/vertical_margin_padding"
                android:layout_marginBottom="10dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:gravity="center"
                tools:text="Mark Zuckerberk"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/text_email"
                tools:text="mark@gmail.com"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white" />
        </LinearLayout>
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:src="@drawable/developer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Contact Developer chairulrahmant@gmail.com"
            android:textColor="@color/white"
            android:layout_gravity="bottom"
            android:textSize="14sp"
            android:layout_margin="@dimen/layout_between_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </FrameLayout>


</LinearLayout>